<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Configuración para el archivo de log -->
        <RollingFile name="FileAppender" fileName="./tmp/app.log"
                     filePattern="./tmp/app.%d{yyyy-MM-dd}.%i.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="7"/>
        </RollingFile>

        <!-- Configuración para la consola -->
        <Console name="ConsoleAppender">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Nivel global y appenders -->
        <Root level="TRACE">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="ConsoleAppender"/>
        </Root>

        <!-- Configuración específica para paquetes o clases -->
        <Logger name="org.springframework" level="WARN"/>
        <Logger name="com.amstech" level="DEBUG"/>
    </Loggers>
</Configuration>
